<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>groupId</groupId>
    <artifactId>OpenVoxel</artifactId>
    <version>0.0.1</version>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.googlecode.mavennatives</groupId>
                <artifactId>maven-nativedependencies-plugin</artifactId>
                <version>0.0.7</version>
                <executions>
                    <execution>
                        <id>unpacknatives</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <nativesTargetDir>target/natives</nativesTargetDir>
                    <separateDirs>false</separateDirs>
                </configuration>
            </plugin>
        </plugins>
    </build>


    <dependencies>

	    <dependency><!--LWJGL for OpenGL + Vulkan-->
		    <groupId>org.lwjgl</groupId>
		    <artifactId>lwjgl</artifactId>
		    <version>3.0.0</version>
	    </dependency>

	    <dependency><!--Natives for LWJGL : Windows-->
		    <groupId>org.lwjgl</groupId>
		    <artifactId>lwjgl-platform</artifactId>
		    <version>3.0.0</version>
		    <classifier>natives-windows</classifier>
	    </dependency>

	    <dependency><!--Natives for LWJGL : MacOS-->
		    <groupId>org.lwjgl</groupId>
		    <artifactId>lwjgl-platform</artifactId>
		    <version>3.0.0</version>
		    <classifier>natives-osx</classifier>
	    </dependency>

	    <dependency><!--Natives for LWJGL : Linux-->
		    <groupId>org.lwjgl</groupId>
		    <artifactId>lwjgl-platform</artifactId>
		    <version>3.0.0</version>
		    <classifier>natives-linux</classifier>
	    </dependency>

        <dependency><!-- Netty Project -->
            <groupId>io.netty</groupId>
            <artifactId>netty-all</artifactId>
            <version>4.1.4.Final</version>
            <scope>compile</scope>
        </dependency>

        <dependency><!--ObjectWeb ASM-->
            <groupId>org.ow2.asm</groupId>
            <artifactId>asm-all</artifactId>
            <version>5.0.3</version>
        </dependency>

        <dependency><!-- Vector Mathematics Utils -->
            <groupId>java3d</groupId>
            <artifactId>vecmath</artifactId>
            <version>1.3.1</version>
        </dependency>

        <dependency><!--Trove Library-->
            <groupId>net.sf.trove4j</groupId>
            <artifactId>trove4j</artifactId>
	        <version>3.0.3</version>
        </dependency>

        <dependency><!--Disruptor Library-->
            <groupId>com.lmax</groupId>
            <artifactId>disruptor</artifactId>
            <version>3.3.5</version>
        </dependency>

    </dependencies>
</project>